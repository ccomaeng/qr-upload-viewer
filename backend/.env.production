# Production Environment Variables for Railway Deployment

# Environment
NODE_ENV=production

# Server Configuration
PORT=10000

# Database
DATABASE_URL=./data/qr_viewer.db

# Frontend URL (will be set to Vercel deployment URL)
FRONTEND_URL=https://qr-upload-viewer.vercel.app

# CORS Origins
CORS_ORIGIN=https://qr-upload-viewer.vercel.app

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# QR Code Settings
QR_ERROR_CORRECTION=M
QR_MARGIN=1
QR_WIDTH=256